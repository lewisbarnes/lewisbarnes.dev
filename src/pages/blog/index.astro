---
import Layout from '../../layouts/Layout.astro';
import PageLink from '../../components/PageLink.astro';
import { Icon } from 'astro-icon';
import GitHubCard from '../../components/GitHubCard.astro';
import PageNav from '../../components/PageNav.astro';
import type { MarkdownInstance } from 'astro';
import PageFooter from '../../components/PageFooter.astro';

let posts: Record<string,any> = [];
try {
	posts = await Astro.glob('./*.md');
} catch(error) {
	
}
---

<Layout title="Lewis Barnes // Blog">
	
  <div class="flex flex-col h-full">
		<PageNav client:load/>
    <main class="py-9 lg:py-12 text-white  main-content">
      <div id="posts" class="mx-[10vw]">
        <h1 class="text-3xl">Blog Posts</h1>
        <div class="my-9 lg:my-12 flex flex-col gap-2">
            {
							posts.length > 0 ?
							
              posts.sort((a: any, b: any) => {return a.file > b.file ? -1 : 1}).filter((x: any) => !x.frontmatter.draft).map((post: any) => (
                <a href={post.url}>
                  <article class="p-2 rounded-md border-transparent hover:border-[#FD107A] border-2 box-border hover:border-opacity-50">
                    <div class="flex gap-2 justify-between flex-wrap items-center">
                      <h1 class="text-xl">{post.frontmatter.title}</h1>
                      <h1 class="text-md">{new Date(post.frontmatter.publishDate).toDateString()}</h1>
                    </div>
                    <div>{post.frontmatter.description}</div>
                  </article>
                </a>
              )) : <p>Nothing found here! Stay tuned!</p>
            }
        </div>
      </div>
    </main>
		<div class="flex-grow"></div>
		<PageFooter/>
  </div>

</Layout>
